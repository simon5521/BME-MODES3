<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.demo.heater.Heater"
         name="Central Action Manager TCP Server" 
         description="This package is responsible for distributing the commands via TCP">
         
         
        
        <Icon resource="OSGI-INF/lampIcon.jpg" size="32"/>
        
        

            
        <AD id="server.port"
            name="Command Server Port"
            type="Integer"
            cardinality="0"
            required="true"
            default="1947"
            description="The port of the TCP server"/>
            
        
        <AD id="server.key"  
            name="Identification key"
            type="String"
            cardinality="0" 
            required="true"
            default="LaborImage01" 
            description="Her you can adjust the GPIO of th red lamp"/>
   
        
        <AD id="server.lamp.state"  
            name="Lamp Sate"
            type="String"
            cardinality="0" 
            required="true"
            default="Stop" 
            description="Here you can adjust state of the traffic lamp.">
           <Option label="On"  value="On"/>      
           <Option label="Off" value="Off"/>         
           <Option label="Warning" value="Warning"/>
           <Option label="Auto" value="Auto"/>
        </AD>
        
       
        
    </OCD>
    
    <Designate pid="org.eclipse.kura.demo.heater.Heater">
        <Object ocdref="org.eclipse.kura.demo.heater.Heater"/>
    </Designate>
</MetaData>
